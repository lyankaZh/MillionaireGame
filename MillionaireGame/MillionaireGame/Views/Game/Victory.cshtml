@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            
            text-align: center;
            color: black;
            font-size: 50px;
        }
      
       body::after {
           content: "";
           background-image: url('../../Content/Images/moneyBackground.jpg');
           opacity: 0.5;
           top: 0;
           left: 0;
           bottom: 0;
           right: 0;
           position: absolute;
           z-index: -1;
           width: 100%;
           height: 100% 
       }
       .play {
           background-color: black !important;
           font-size: 35px !important;
           border-radius: 25px !important;
           color:white
       }
       .play:hover {
           color: white;
           text-decoration: none
       }
    </style>
</head>

<body>
<div>
    <p>Congratulations, @Session["username"]</p>
    <p>Your won 1 000 000$</p>
    @Html.ActionLink("Play again", "Index", "Game", new { @class ="btn btn-default play" })

</div>
</body>
</html>

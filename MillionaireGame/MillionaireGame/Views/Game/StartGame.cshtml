@*@model MillionaireGame.Models.QuestionModel*@
@{
    Layout = null;
    AjaxOptions ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "question",
        OnSuccess = "enableEvents"
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StartGame</title>
    <link href="~/Styles/gameStyles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <div>
        <table>
            <tr id="t15">
                <td>15</td>
                <td>1000000$</td>
            </tr>
            <tr id="t14">
                <td>14</td>
                <td>500000$</td>
            </tr>
            <tr id="t13">
                <td>13</td>
                <td>250000$</td>
            </tr>
            <tr id="t12">
                <td>12</td>
                <td>125000$</td>
            </tr>
            <tr id="t11">
                <td>11</td>
                <td>64000$</td>
            </tr>
            <tr id="t10">
                <td>10</td>
                <td>32000$</td>
            </tr>
            <tr id="t9">
                <td>9</td>
                <td>16000$</td>
            </tr>
            <tr id="t8">
                <td>8</td>
                <td>8000$</td>
            </tr>
            <tr id="t7">
                <td>7</td>
                <td>4000$</td>
            </tr>
            <tr id="t6">
                <td>6</td>
                <td>2000$</td>
            </tr>
            <tr id="t5">
                <td>5</td>
                <td>1000$</td>
            </tr>
            <tr id="t4">
                <td>4</td>
                <td>500$</td>
            </tr>
            <tr id="t3">
                <td>3</td>
                <td>300$</td>
            </tr>
            <tr id="t2">
                <td>2</td>
                <td>200$</td>
            </tr>
            <tr id="t1">
                <td>1</td>
                <td>100$</td>
            </tr>
        </table>

    </div>

    <div id="question">
        @Html.Action("NextQuestion", new { questionNumber = 0})
    </div>

<div>
    @using (Ajax.BeginForm("NextQuestion", ajaxOptions))
    {
        <button type="submit" style="display:none;" id="next_question">Next question</button>
    }
</div>

    <div>
        @if ((bool)Session["IsFiftyFiftyUsed"])
        {
            <img src="~/Content/Images/HintsImages/hint50Crossed.png" />
        }
        else
        {
            <img id="img1" src="~/Content/Images/HintsImages/hint50.png" />
        }

        @if ((bool)Session["IsPhoneCallUsed"])
        {
            <img src="~/Content/Images/HintsImages/hintPhoneCrossed.png" />
        }
        else
        {
            <img src="~/Content/Images/HintsImages/hintPhone.png" />
        }

        @if ((bool)Session["IsAudienceAskUsed"])
        {
            <img src="~/Content/Images/HintsImages/hintAskCrossed.png" />
        }
        else
        {
            <img src="~/Content/Images/HintsImages/hintAsk.png" />
        }



    </div>

    @Html.ActionLink("Send", "SendEmail", "Game")


<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<script type="text/javascript">
    $(document).ready(enableEvents);

    function enableEvents() {
        for (var i = 0; i < 4; i++) {
            var button = $("#" + i);
            if (button.text() != "") {
                $(button).on("click", checkAnswer);
            }
        }
    }
    
</script>
</body>
</html>
